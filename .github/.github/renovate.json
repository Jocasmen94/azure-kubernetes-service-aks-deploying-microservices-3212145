{
  "extends": ["config:base"],
  "autodiscover": false,
  "baseBranches": ["feat/renovate-test"],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "includePaths": [
    "deployments/",
    "helm/",
    "docker/"
  ],
  "enabledManagers": [
    "dockerfile",
    "kubernetes",
    "helm-values",
    "helm-chart"
  ],
  "packageRules": [
    {
      "matchManagers": ["dockerfile"],
      "groupName": "Docker image updates"
    },
    {
      "matchManagers": ["kubernetes"],
      "groupName": "Kubernetes manifest updates"
    },
    {
      "matchManagers": ["helm-values", "helm-chart"],
      "groupName": "Helm chart updates"
    }
  ],
  "labels": ["dependencies", "renovate-bot"]
}
