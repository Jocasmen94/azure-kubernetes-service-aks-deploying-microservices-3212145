{
  "extends": ["config:base"],
  "autodiscover": false,
  "baseBranches": ["feat/renovate-test"],
  "prBaseBranch": "feat/renovate-test",
  "includePaths": [
    "deployments/",
    "helm/",
    "docker/"
  ],
  "packageRules": [
    {
      "matchManagers": ["dockerfile"],
      "groupName": "Docker image updates",
      "enabled": true
    },
    {
      "matchManagers": ["kubernetes"],
      "groupName": "Kubernetes manifest updates",
      "enabled": true
    },
    {
      "matchManagers": ["helm-chart", "helm-values"],
      "groupName": "Helm chart updates",
      "enabled": true
    },
    {
      "matchManagers": ["npm", "yarn", "maven", "gradle", "pip", "composer", "nuget"],
      "enabled": false
    }
  ],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "labels": ["dependencies", "renovate-bot"]
}
